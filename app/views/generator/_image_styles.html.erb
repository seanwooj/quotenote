<style>
  * {
    margin: 0;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  #quotenote {
    height: 1800px;
    width: 1800px;
    overflow: hidden;
    position: relative;
    color: <%= @options[:font_color] %>;
    font-family: <%= @options[:font_family].split('_').join(' ').titleize %>;
    background-image: url(<%= @background_url %>);
  }
  #quotenote.cover-background {
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
  }

  #quotenote .overlay.active {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    opacity: .99;
  }

  #quotenote .quote {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 20% 15%;
    position: relative;
    z-index: 10;
  }

  #quotenote .quote .quote-text {
    line-height: 115%;
  }

  #quotenote .quote .quote-text .quote-text-line {
    display: inline-block;
    white-space: nowrap;
  }

  #quotenote .quote .author-text {
    margin-top: 5%;
    opacity: .6;
  }
</style>
