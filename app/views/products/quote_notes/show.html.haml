#product.seven.columns
  .product-preview
    .background{:style => "background: url(#{image_url('brick_wall.jpg')}); width: 100%; height: 400px; position: relative;"}
      .product_preview
        = image_tag 'clip.png', :style => "position: absolute; top: 40px; right: 50%; width: 50px; margin-left: 80px;"
        .quote_note{:style => 'width: 50%; margin-left: 25%; margin-top: 70px; box-shadow: 0px 3px 3px rgba(0,0,0,0.3), background: white; padding: 10px;'}
          = image_tag @quote_note.image.url(:preview)

#product-details.five.columns
  %h1= @product.name
  %h5 Product Information
  %p= @product.description
  %hr
  = link_to add_cart_path(:product_id => @product.id, :quote_note_id => @quote_note.id), :class => 'button button-pink', :method => :post do
    %i.fi-shopping-cart
    Add To Cart
  = link_to 'See more products', @quote_note, :class => 'button'

