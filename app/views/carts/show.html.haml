%h2.section-header
  Your Cart
%table.table.table-hover
  %thead
    %tr
      %th Quantity
      %th Product Name
      %th QuoteNote
      %th Total Price
  - @cart.items.each do |item|
    %tr
      %td= item.quantity
      %td
        / = image_tag item.product.image.thumb
        = link_to item.product.name, product_path(item.product_id)
      %td
        = link_to "View QuoteNote", item.quote_note
      %td= number_to_currency item.total_price
  %tfoot
    %tr
      %td.text-right(colspan=3)
        %strong
          Total:
          = number_to_currency @cart.total_price

=link_to 'Checkout', checkout_cart_path, :class => 'button button-pink'
=link_to 'Add More Products', :back, :class => 'button'
=link_to empty_cart_path, :class => 'button', :method => :delete do
  %i.fi-trash
  Empty Cart



