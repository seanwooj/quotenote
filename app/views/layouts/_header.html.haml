#masthead
  .container
    %section.header
      %h2
        = link_to 'QuoteNote', root_path, :id => 'logo'
      %ul.nav-menu
        %li
          = link_to cart_path, :class => 'shopping-cart' do
            %i.fi-shopping-cart
            - if @cart.total_count > 0
              = number_to_currency @cart.total_price
